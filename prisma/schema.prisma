generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model BridgeTable {
  id          Int        @id @default(autoincrement())
  name        String     @db.VarChar(50)
  status      String     @default("active")
  user_id     String     @db.VarChar(30)
  alias_name  String?
  total_count Int        @default(0)
  field_count Int        @default(0)
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt

  @@map("bridge_tables")
}

model BridgeTableField {
  id          Int        @id @default(autoincrement())
  table_id    Int        
  name        String     
  alias_name  String?
  field_type  String     @default("string") // 字段类型：string, number, boolean, date, json等
  status      String     @default("active")
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt

  @@map("bridge_table_fields")
}

model BridgeConsumerCursor {
  id          Int        @id @default(autoincrement())
  consumer    String     @db.VarChar(30)
  table_id    Int
  table_name  String    @db.VarChar(50)
  cursor_id   Int

  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  @@map("bridge_consumer_cursor")
}

model BridgeQueueSubscriber {
    id            Int           @id @default(autoincrement())
    name          String        @db.VarChar(100)
    table_id      Int
    table_name    String        @db.VarChar(100)
    status        String        @default("active")
    endpoint_type String        @default("api")
    endpoint      Json          // 存储 JSON 结构，可能包含 api、queue_name 或 queue_id 字段
    created_at    DateTime      @default(now())
    updated_at    DateTime      @updatedAt
    trigger_type  String        @default("new")
    fields        String[]
    trigger_config  Json      

    @@map("bridge_queue_subscribers")
}

